<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown"
    android:orientation="vertical"
    tools:context=".AccountFragment">

    <TextView
        android:id="@+id/mainset_tvheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="Account Settings"
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mainset_tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:width="200dp"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/mainset_btnname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00FFFFFF"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:text="EDIT"
            android:textColor="#000000"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/line"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/connect_help"
        android:layout_gravity="center"
        android:width="300dp"
        android:background="#FF777373"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mainset_tvnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:width="200dp"
            android:text="Contact Number"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/mainset_btnnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:text="EDIT"
            android:textColor="#000000"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/line2"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/connect_help"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:width="300dp"
        android:background="#FF777373"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mainset_tvsostext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:width="200dp"
            android:text="SOS Message"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/mainset_btnsos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:text="EDIT"
            android:textColor="#000000"
            android:textStyle="normal" />

    </LinearLayout>

    <TextView
        android:id="@+id/line4"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_below="@+id/connect_help"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:width="300dp"
        android:background="#FF777373"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/mainset_btnclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Clear Location History"
        android:textColor="#FFFFFF"
        app:backgroundTint="@color/dark_red"/>

</LinearLayout>